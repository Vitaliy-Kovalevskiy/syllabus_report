<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/syllabus_report/db" VERSION="2022030400" COMMENT="XMLDB file for Moodle local_syllabus_report plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
  <TABLES>
    <TABLE NAME="syllabus_report" COMMENT="Table for storing syllabus data">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" AUTOINCREMENT="true" SEQUENCE="true" COMMENT="Primary key"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" COMMENT="Course ID"/>
        <FIELD NAME="content" TYPE="text" LENGTH="small" NOTNULL="true" COMMENT="Syllabus content"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
